# AI Subtitle Translator Configuration by LavX
# https://github.com/LavX/ai-subtitle-translator

# OpenRouter Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_DEFAULT_MODEL=google/gemini-2.5-flash-preview-09-2025
OPENROUTER_TEMPERATURE=0.3
OPENROUTER_MAX_TOKENS=8000

# Server Configuration
HOST=0.0.0.0
PORT=8765

# Translation Configuration
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=120.0

# Job Queue Configuration
JOB_QUEUE_MAX_CONCURRENT=10   # Max concurrent translation jobs
JOB_QUEUE_MAX_JOBS=100       # Max jobs in memory
JOB_QUEUE_TTL_HOURS=1        # Time-to-live for completed/failed jobs

# App identification for OpenRouter analytics
APP_NAME=ai-subtitle-translator
APP_URL=https://lavx.hu